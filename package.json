    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "rimraf": "^5.0.1",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.6.9",
  "lint-staged": {
    "*.{html,js,ts,tsx,json,yml,css,scss}": "prettier --write",
    "*.{js,ts,tsx}": "eslint"
